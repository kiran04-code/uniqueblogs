<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Posts | Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @media (max-width: 600px) {
      footer {
        margin-top: 25%;
      }
    }
  </style>
</head>
<body class="bg-black text-white font-sans min-h-screen flex flex-col lg:flex-row">

  <!-- Sidebar for large screens -->
  <aside class="hidden lg:flex lg:flex-col bg-gray-900 w-64 h-screen sticky top-0 p-6 shadow-lg">
    <h2 class="text-2xl font-bold text-indigo-400 mb-8">Admin Panel</h2>
    <nav class="flex flex-col space-y-4 text-gray-300">
      <a href="/admin" class="hover:text-indigo-400 transition"><i class="fas fa-tachometer-alt mr-2"></i>Dashboard</a>
      <a href="/admin/comments" class="hover:text-indigo-400 transition"><i class="fas fa-comments mr-2"></i>Comments</a>
      <a href="/admin/posts" class="hover:text-indigo-400 transition font-semibold"><i class="fas fa-pen-nib mr-2"></i>Posts</a>
      <a href="/admin/users" class="hover:text-indigo-400 transition"><i class="fas fa-users mr-2"></i>Users</a>
    </nav>
  </aside>

  <!-- Main content -->
  <div class="flex-1 flex flex-col min-h-screen">
    <!-- Header -->
    <div class="p-6 flex justify-between items-center border-b border-gray-800">
      <h1 class="text-3xl font-bold text-indigo-400">All Posts</h1>
      <a href="/admin" class="bg-indigo-500 hover:bg-indigo-600 px-4 py-2 rounded-full text-white text-sm sm:text-base">
        <i class="fas fa-arrow-left mr-2"></i>Back to Dashboard
      </a>
    </div>

    <!-- Posts Table -->
    <div class="p-6 flex-grow">
      <div class="overflow-x-auto bg-gray-900 rounded-2xl shadow-lg">
        <table class="min-w-full text-sm text-left">
          <thead class="bg-gray-800 text-indigo-300 uppercase text-xs">
            <tr>
              <th class="px-6 py-4">Title</th>
              <th class="px-6 py-4">Author</th>
              <th class="px-6 py-4">Published</th>
              <th class="px-6 py-4 text-center">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-700">
            <% postz.forEach(element => { %>
              <tr class="hover:bg-gray-800">
                <td class="px-6 py-4 font-medium text-white"><%= element.title %></td>
                <td class="px-6 py-4 text-gray-300"><%= element.createdBy ? element.createdBy.username : "Unknown" %></td>
                <td class="px-6 py-4 text-gray-400"><%= new Date(element.createdAt).toLocaleDateString() %></td>
                <td class="px-6 py-4 text-center space-x-2">
                  <a href="/deletpostadmin/<%=element._id%>">
                    <button 
                      class="bg-red-500 hover:bg-red-600 px-3 py-1 rounded-full text-sm"
                      onclick="return confirm('Are you sure you want to delete this user?')">
                      <i class="fas fa-trash"></i> Delete
                    </button>
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-400 text-sm px-6 py-4 text-center rounded-t-2xl shadow-inner w-full">
      <div class="flex flex-col sm:flex-row justify-between items-center max-w-7xl mx-auto space-y-4 sm:space-y-0">
        <span>&copy; 2025 UniqueBlog Admin Panel. All rights reserved.</span>
        <div class="flex flex-col sm:flex-row items-center space-y-2 sm:space-y-0 sm:space-x-4">
          <div class="space-x-4">
            <a href="#" class="hover:text-indigo-400 transition duration-200">Privacy Policy</a>
            <a href="#" class="hover:text-indigo-400 transition duration-200">Terms</a>
            <a href="mailto:support@uniqueblog.com" class="hover:text-indigo-400 transition duration-200">Support</a>
          </div>
        </div>
      </div>
    </footer>

  </div>
</body>
</html>
