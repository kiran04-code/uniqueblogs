<body class="text-white min-h-screen flex flex-col justify-between">

  <!-- Main Content -->
  <main class="flex-grow p-6">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold text-indigo-300 mb-10 flex items-center gap-3">
