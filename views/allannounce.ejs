      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Dummy Cards (same as before) -->
      <% Announcement.forEach(element => { %>
        <div class="bg-gray-800 rounded-2xl p-6 shadow-lg hover:shadow-indigo-500/30 transition duration-300">
