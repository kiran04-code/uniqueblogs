<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>All Users | Admin Panel</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <style>
    /* Tailwind custom styles for mobile menu */
    @media (max-width: 768px) {
      .sidebar {
        display: none;
      }
      .sidebar-toggle {
        display: block;
      }
    }
  </style>
</head>

<body class="bg-black text-white font-sans">
  <div class="flex min-h-screen flex-col">
    <!-- Mobile Sidebar Toggle -->
    <button class="sidebar-toggle sm:hidden fixed top-5 left-5 p-4 bg-gray-900 text-white rounded-full" onclick="toggleSidebar()">
      <i class="fas fa-bars"></i>
    </button>

    <!-- Main Content -->
    <div class="flex flex-1">
      <!-- Sidebar -->
      <aside class="bg-gray-900 w-64 p-6 hidden md:block sidebar">
        <h1 class="text-2xl font-bold text-indigo-400 mb-8">UniqueAdmin</h1>
        <nav class="space-y-4 text-sm">
          <a href="/admin" class="flex items-center space-x-2 hover:text-indigo-300"><i class="fas fa-home"></i><span>Dashboard</span></a>
          <a href="#" class="flex items-center space-x-2 text-indigo-400 font-semibold"><i class="fas fa-users"></i><span>All Users</span></a>
          <a href="#" class="flex items-center space-x-2 hover:text-indigo-300"><i class="fas fa-blog"></i><span>Posts</span></a>
          <a href="#" class="flex items-center space-x-2 hover:text-indigo-300"><i class="fas fa-comments"></i><span>Comments</span></a>
          <a href="#" class="flex items-center space-x-2 hover:text-indigo-300"><i class="fas fa-cogs"></i><span>Settings</span></a>
          <a href="/" class="flex items-center space-x-2 hover:text-indigo-300"><i class="fas fa-sign-out-alt"></i><span>Back to Site</span></a>
        </nav>
      </aside>

      <!-- Main Panel -->
      <div class="flex-1 p-6">
        <!-- Header -->
        <header class="flex justify-between items-center mb-8">
          <h2 class="text-3xl font-bold text-indigo-300">All Users</h2>
          <button class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-full">
            <i class="fas fa-user-cog mr-2"></i>Admin
          </button>
        </header>

        <!-- User Table -->
        <div class="bg-gray-900 p-6 rounded-2xl shadow-lg overflow-x-auto">
          <table class="w-full table-auto text-sm text-left">
            <thead>
              <tr class="text-indigo-300 border-b border-gray-700">
                <th class="p-4">Name</th>
                <th class="p-4">Email</th>
                <th class="p-4">Role</th>
                <th class="p-4">Actions</th>
              </tr>
            </thead>
            <tbody class="text-white divide-y divide-gray-800">
              <% userz.forEach(element => { %>
                <tr>
                  <td class="p-4"><%=element.username%></td>
                  <td class="p-4"><%=element.email%></td>
                  <td class="p-4">User</td>
                  <td class="p-4 space-x-2">
                    <button class="bg-indigo-500 hover:bg-indigo-600 px-3 py-1 rounded-full text-sm">
                      <i class="fas fa-edit"></i> Edit
                    </button>
                    <a href="/deletbyadmin/<%=element._id%>">
                      <button 
                        class="bg-red-500 hover:bg-red-600 px-3 py-1 rounded-full text-sm"
                        onclick="return confirm('Are you sure you want to delete this user?')"
                      >
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-400 text-sm px-6 py-4 text-center rounded-t-2xl shadow-inner mt-10">
      <div class="flex flex-col sm:flex-row justify-between items-center max-w-7xl mx-auto space-y-2 sm:space-y-0">
        <span>&copy; 2025 UniqueBlog Admin Panel. All rights reserved.</span>
        <div class="space-x-4">
          <a href="#" class="hover:text-indigo-400 transition duration-200">Privacy Policy</a>
          <a href="#" class="hover:text-indigo-400 transition duration-200">Terms</a>
          <a href="mailto:support@uniqueblog.com" class="hover:text-indigo-400 transition duration-200">Support</a>
        </div>
      </div>
    </footer>
  </div>

  <script>
    function toggleSidebar() {
      const sidebar = document.querySelector('.sidebar');
      sidebar.classList.toggle('hidden');
    }
  </script>
</body>

</html>
