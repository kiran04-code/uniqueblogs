<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Blog Posts | UniqueBlog</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    body {
      background:black;
    }
  </style>
</head>
<body class="text-white font-sans">

  <!-- Navbar -->
  <nav class="bg-gray-950 p-4 shadow-md">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-indigo-400 tracking-wide">UniqueBlog</a>
      <div>
        <a href="/post" class="text-gray-300 hover:text-indigo-300 mr-4">Create Blog</a>
        <a href="/profile" class="text-gray-300 hover:text-red-400">profile</a>
      </div>
    </div>
  </nav>

  <!-- Page Title -->
  <header class="text-center mt-10">
    <h1 class="text-4xl font-extrabold text-indigo-500">My Blog Posts</h1>
    <p class="text-gray-400 mt-2">Here are your latest writings...</p>
  </header>

  <!-- Blog Cards -->
  <section class="max-w-6xl mx-auto px-4 py-12 grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    <% if (locals.blogs) { %>
      <% blogs.forEach(element => { %>
        <!-- Blog Card -->
        <div class="relative bg-gradient-to-br from-indigo-600 to-purple-600 p-6 rounded-3xl shadow-xl transition-transform duration-300 hover:scale-[1.02] border border-white/10 space-y-4">
          
          <!-- Blog Title -->
          <h3 class="text-2xl font-extrabold text-white tracking-tight"><%= element.title %></h3>
          
          <!-- Blog Content -->
          <p class="text-white/90 text-sm leading-relaxed">
            <%= (element.content.split(' ').slice(0, 16).join(' ') + '...') || "A beginner‚Äôs guide to understanding astronomy and the wonders of our galaxy." %>
            <a href="/readmore/<%= element._id %>" class="text-indigo-300 hover:text-indigo-100 underline ml-1">Read More ‚Üí</a>
          </p>
    
          <!-- Blog Date -->
          <div class="flex items-center text-xs text-white/70 gap-2">
            <i class="far fa-calendar-alt"></i>
            <%= new Date(element.createdAt).toLocaleDateString() %>
          </div>
    
          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row justify-end sm:items-center gap-3 pt-4">
            <!-- View Comments -->
            <a href="/seecommets/<%= element._id %>"
               class="bg-gradient-to-r from-blue-600 to-blue-800 hover:from-blue-700 hover:to-blue-900 
                      text-white px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2 shadow hover:shadow-md transition">
              <i class="fas fa-comment-dots"></i>
              View Comments
            </a>
    
            <!-- Edit Button -->
            <a href="/edit/<%= element._id %>"
               class="bg-yellow-400 hover:bg-yellow-500 text-black px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2 shadow hover:shadow-md transition">
              ‚úèÔ∏è Edit
            </a>
    
            <!-- Delete Button -->
            <a href="/delete/<%= element._id %>"
               onclick="return confirm('Are you sure you want to delete this blog?')"
               class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2 shadow hover:shadow-md transition">
              üóëÔ∏è Delete
            </a>
          </div>
        </div>
      <% }) %>
    <% } %>
    
  </section>

  <!-- Footer -->
  <footer class="text-center text-sm text-gray-400 p-4 border-t border-gray-800">
    &copy; 2025 UniqueBlog. All rights reserved.
  </footer>

</body>
</html>
