<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= blog.title %> | UniqueBlog</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: black;
    }
  </style>
</head>
<body class="text-white font-sans min-h-screen flex flex-col">

  <!-- Navbar -->
  <nav class="bg-gray-950 p-4 shadow-lg">
    <div class="w-full flex justify-between items-center px-4 md:px-10">
      <a href="/" class="text-2xl font-bold text-indigo-400 tracking-wide">UniqueBlog</a>
      <a href="/blogs" class="text-sm md:text-base text-gray-300 hover:text-indigo-300">Back to Blogs</a>
    </div>
  </nav>

  <!-- Blog Content Fullscreen -->
  <main class="flex-grow w-full bg-gradient-to-br from-indigo-700 to-purple-700 px-4 sm:px-10 py-10 space-y-10">

    <!-- Title -->
    <h1 class="text-4xl sm:text-5xl font-extrabold text-white"><%= blog.title %></h1>

    <!-- Meta -->
    <div class="flex flex-col sm:flex-row justify-between text-sm text-gray-300">
      <p>‚úçÔ∏è Published by <span class="text-white font-semibold"><%= blog.createdBy.username %></span></p>
      <p>üìÖ <%= new Date(blog.createdAt).toLocaleDateString() %></p>
    </div>

    <!-- Content -->
    <div class="text-white/90 text-base sm:text-lg leading-relaxed">
      <%= blog.content %>
    </div>

    <!-- Comment Form -->
    <% if (locals.user) { %>
      <div class="bg-white/10 p-6 sm:p-8 rounded-lg shadow-lg w-full">
        <h2 class="text-xl font-semibold mb-4">Leave a Comment</h2>
        <form action="/readmore/coments/<%=blog._id %>" method="post" class="space-y-4">
          <div>
            <label for="comment" class="block text-sm font-medium text-gray-300 mb-1">Your Comment</label>
            <input
              type="text"
              id="comment"
              name="coments"
              required
              placeholder="Write something kind..."
              class="w-full p-3 rounded-md bg-white/10 text-white placeholder-gray-400 border border-white/20 focus:outline-none focus:ring-2 focus:ring-indigo-500"
            />
          </div>
          <button type="submit"
            class="bg-indigo-500 hover:bg-indigo-600 text-white font-medium px-6 py-2 rounded-lg shadow-md transition duration-200">
            üì® Submit Comment
          </button>
        </form>
      </div>
    <% } %>

    <!-- Comments Section -->
    <div class="space-y-4">
      <h3 class="text-xl font-semibold mb-2">üó®Ô∏è Comments</h3>

      <% if (locals.coments && coments.length > 0) { %>
        <% coments.forEach(element => { %>
          <div class="bg-white/10 p-4 rounded-lg">
            <p class="text-sm text-gray-300 mb-1">
              <strong class="text-white"><%= element.createdBy.username %></strong><%= new Date(element.createdAt).toLocaleString() %>
            </p>
            <p class="text-white break-words"><%= element.coments.trim() %></p>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-gray-400 italic">No comments yet. Be the first to share your thoughts!</p>
      <% } %>
    </div>

  </main>

  <!-- Footer -->
  <footer class="bg-gray-950 text-white text-center p-4 border-t border-gray-800">
    <p class="text-sm text-gray-400">&copy; 2025 UniqueBlog. All rights reserved.</p>
  </footer>

</body>
</html>
