<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <title>Welcome | UniqueBlog</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <style>
    /* Custom loader style */
    #loader {
      height: 100%;
      width: 100%;
      background-color: black;
      position: fixed;
      z-index: 999;
      top: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all ease 1s;
    }
    #loader h1 {
      color: transparent;
      font-family: futura;
      opacity: 0;
      font-size: 4vw;
      background: linear-gradient(to right, #1552F0, #4d8eff);
      -webkit-background-clip: text;
      position: absolute;
      animation-name: loder;
      animation-duration: 1s;
      animation-delay: 1s;
      animation-timing-function: linear;
    }
    #loader h1:nth-child(2) {
      animation-delay: 2s;
    }
    #loader h1:nth-child(3) {
      animation-delay: 3s;
    }
    @keyframes loder {
      0% { opacity: 0; }
      10% { opacity: 1; }
      90% { opacity: 1; }
      100% { opacity: 0; }
    }
  </style>
</head>

<body class="bg-black text-white font-sans">
  <% if (!locals.user) { %>
    <div id="loader">
      <h1>WRITE</h1>
      <h1>INSPIRE</h1>
      <h1>CONNECT</h1>
    </div>
  <% } %>

  <nav class="bg-gray-900 text-white p-4 shadow-md">
    <div class="max-w-7xl mx-auto flex flex-wrap justify-between items-center">
      <a href="/" class="text-2xl font-bold flex items-center space-x-1 justify-center md:justify-start">

  <span class="text-indigo-400">Uni</span>

  <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-blue-500 text-4xl drop-shadow-md font-extrabold italic">U</span>

  <span class="text-indigo-400">queBlog</span>

</a>

      
      <!-- Desktop Menu -->
      <div class="flex space-x-4 mt-2 md:mt-0 hidden md:flex">
        <% if (locals.user) { %>
          <a href="/community" class="hover:text-indigo-300 text-sm md:text-base">Unique Community</a>
          <a href="/post" class="hover:text-indigo-300 text-sm md:text-base">Add Post</a>
          <a href="/profile" class="hover:text-indigo-300 text-sm md:text-base">Profile</a>

        <% } else { %>
          <a href="/signin" class="hover:text-indigo-300 text-sm md:text-base">Login</a>
          <a href="/signup" class="hover:text-indigo-300 text-sm md:text-base">Signup</a>
        <% } %>
      </div>
      
  
      <!-- Mobile Menu Button (Hamburger Icon) -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-white focus:outline-none">
          <i class="fas fa-bars text-2xl"></i>
        </button>
      </div>
    </div>
  
    <!-- Mobile Menu Dropdown -->
    <div id="mobile-menu" class="md:hidden hidden bg-gray-900 text-white p-4">
      <div class="flex flex-col space-y-2">
        <% if (locals.user) { %>
          <a href="/community" class="hover:text-indigo-300 text-sm md:text-base">Unique Community</a>
          <a href="/post" class="hover:text-indigo-300 text-sm md:text-base">Add Post</a>
          <a href="/profile" class="hover:text-indigo-300 text-sm md:text-base">Profile</a>
        <% } else { %>
          <a href="/signin" class="hover:text-indigo-300 text-sm md:text-base">Login</a>
          <a href="/signup" class="hover:text-indigo-300 text-sm md:text-base">Signup</a>
        <% } %>
      </div>
    </div>
    
  </nav>

  <!-- Hero Section -->
  <section class="flex flex-col items-center text-center py-16 px-4 sm:px-6 md:py-28">
    <div class="w-full px-4">
      <h1
  id="hero-heading"
  class="w-full text-center text-3xl sm:text-4xl md:text-6xl font-bold mb-6 leading-tight text-indigo-400 tracking-tight"
>
  Write. Inspire. Connect.
</h1>

    </div>
    
    <p class="text-base md:text-lg max-w-2xl mx-auto text-gray-300 mb-10 font-light" style="font-family: Teachers;">
      Share your stories and ideas with the world. Join our creative blogging community today.
    </p>
    <a href="/signup" class="bg-indigo-500 text-white px-6 py-3 rounded-2xl hover:bg-indigo-600 transition text-sm md:text-base">
      Get Started
    </a>
  </section>
  <!-- Blog Cards -->
  <section class="max-w-6xl mx-auto px-4 py-10">
    <h2 class="text-3xl font-bold text-indigo-300 mb-10 text-center">Latest Blog Posts</h2>
    <div class="grid gap-6 sm:gap-8 grid-cols-1 sm:grid-cols-2 xl:grid-cols-3">
      <% if (locals.postz) { %>
        <% postz.forEach(element => { %>
          <div class="bg-gray-800 rounded-2xl shadow-lg p-6 flex flex-col justify-between hover:shadow-indigo-500/30 transition duration-300">
            <div>
              <h3 class="text-xl font-bold text-white mb-3"><%= element.title %></h3>
              <p class="text-gray-400 text-sm leading-relaxed mb-4">
                <%= (element.content.split(' ').slice(0, 16).join(' ') + '...') || "A beginner’s guide to understanding astronomy and the wonders of our galaxy." %>
              </p>
            </div>
            <a href="/readmore/<%= element._id %>" class="mt-auto text-indigo-400 hover:underline text-sm font-medium">Read More →</a>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-indigo-300 text-center col-span-full">No New Blog Here</h3>
      <% } %>
    </div>
  </section>

  <!-- Why Choose UniqueBlog Section -->
  <section class="max-w-5xl mx-auto px-4 py-14" id="why-us">
    <h2 class="text-3xl font-bold text-center text-indigo-300 mb-10">Why Choose UniqueBlog?</h2>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-8 text-center">
      <div class="bg-gradient-to-br from-indigo-700 to-purple-700 p-6 rounded-xl shadow-lg text-white hover:scale-105 transform transition">
        <i class="fas fa-pen-nib text-3xl text-white mb-4"></i>
        <h3 class="text-xl font-semibold mb-2">Creative Freedom</h3>
        <p class="text-sm opacity-90">Write anything, anytime, with full control over your content.</p>
      </div>
        <div class="bg-gradient-to-br from-teal-600 to-cyan-600 p-6 rounded-xl shadow-lg text-white hover:scale-105  transform transition">
          <i class="fas fa-users text-3xl text-white mb-4"></i>
          <h3 class="text-xl font-semibold mb-2">Community Driven</h3>
          <p class="text-sm opacity-90">Join a vibrant space of creators and inspire like-minded readers.</p>
        </div>
   
      
      <div class="bg-gradient-to-br from-rose-500 to-pink-600 p-6 rounded-xl shadow-lg text-white hover:scale-105 transform transition">
        <i class="fas fa-bolt text-3xl text-white mb-4"></i>
        <h3 class="text-xl font-semibold mb-2">Fast & Secure</h3>
        <p class="text-sm opacity-90">Optimized speed and robust privacy for all your posts and data.</p>
      </div>
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="relative py-20 px-6 sm:px-10 bg-black overflow-hidden">
    <div class="absolute inset-0 opacity-20 blur-3xl pointer-events-none" style="background: radial-gradient(circle at top left, #6366f1, #ec4899);"></div>

    <div class="max-w-3xl mx-auto text-center relative z-10 bg-white/5 border border-white/10 rounded-2xl p-10 backdrop-blur-md shadow-2xl shadow-indigo-500/20">
      <h2 class="text-4xl font-extrabold text-indigo-300 mb-4">Stay in the Loop</h2>
      <p class="text-gray-300 mb-8 max-w-lg mx-auto">
        Subscribe to our newsletter and never miss an update from <span class="text-indigo-400 font-semibold">UniqueBlog</span>.
      </p>

      <form class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <input 
          type="email" 
          placeholder="Enter your email" 
          class="px-5 py-3 rounded-full w-full sm:w-auto text-sm sm:text-base text-black focus:outline-none focus:ring-2 focus:ring-indigo-400 transition duration-200" 
          required 
        />
        <button 
          type="submit" 
          class="bg-indigo-500 hover:bg-indigo-600 text-white font-semibold px-6 py-3 rounded-full shadow-md hover:shadow-indigo-600/50 transition duration-300"
        >
          Subscribe
        </button>
      </form>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white text-center p-4 border-t border-gray-700">
    <p class="text-sm">&copy; 2025 UniqueBlog. All rights reserved.</p>
  </footer>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
  <script>
    gsap.registerPlugin(ScrollTrigger);

    setTimeout(() => {
      const loader = document.getElementById("loader");
      loader.style.top = "-100%";
    }, 3700);

    // Mobile Menu Toggle Functionality
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');  // This will toggle the visibility of the mobile menu
    });

    document.addEventListener("DOMContentLoaded", () => {
      const heading = document.getElementById("hero-heading");
      const text = heading.textContent;
      heading.innerHTML = '';

      text.split('').forEach(char => {
        const span = document.createElement('span');
        span.textContent = char === ' ' ? '\u00A0' : char;
        span.classList.add('char');
        heading.appendChild(span);
      });

      gsap.set(".char", {
        opacity: 0,
        y: 100,
        rotateZ: gsap.utils.random(-45, 45, 5),
        scale: 0.5,
      });

      gsap.to(".char", {
        opacity: 1,
        y: 0,
        rotateZ: 0,
        scale: 1,
        color: "#a5b4fc",
        duration: 1,
        ease: "elastic.out(1, 0.6)",
        stagger: {
          each: 0.05,
          from: "start"
        }
      });

      gsap.from(".feature", {
        opacity: 0,
        y: 80,
        duration: 1,
        stagger: 0.2,
        scrollTrigger: {
          trigger: "#why-us",
          start: "top 80%",
        }
      });
    });

    document.addEventListener("DOMContentLoaded", () => {
      const menuBtn = document.getElementById("mobile-menu-button");
      const mobileMenu = document.getElementById("mobile-menu");
      let isOpen = false;

      // Set initial state
      gsap.set(mobileMenu, { height: 0, opacity: 0, display: "none" });

      menuBtn.addEventListener("click", () => {
        if (!isOpen) {
          gsap.set(mobileMenu, { display: "block" });
          gsap.to(mobileMenu, {
            height: "auto",
            opacity: 1,
            duration: 0.4,
            ease: "power2.out"
          });
        } else {
          gsap.to(mobileMenu, {
            height: 0,
            opacity: 0,
            duration: 0.3,
            ease: "power2.inOut",
            onComplete: () => gsap.set(mobileMenu, { display: "none" })
          });
        }
        isOpen = !isOpen;
      });
    });
  </script>
</body>
</html>
