<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>Admin Dashboard | UniqueBlog</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <style>
    * {
      scroll-behavior: smooth;
    }

    .custom-scrollbar::-webkit-scrollbar {
      width: 0px;
      background: transparent;
    }
    /* Optional - for Tailwind hidden scrollbars */
.custom-scrollbar::-webkit-scrollbar {
  width: 4px;
}
.custom-scrollbar::-webkit-scrollbar-thumb {
  background-color: rgba(129, 140, 248, 0.4); /* soft indigo */
  border-radius: 4px;
}

  </style>
</head>

<body class="bg-black text-white font-sans">
  <div class="flex min-h-screen flex-col">
    <!-- Main Content Area -->
    <div class="flex flex-1">
      <!-- Sidebar -->
      <aside class="bg-gray-900 w-64 p-6 hidden md:block">
        <h1 class="text-2xl font-bold text-indigo-400 mb-8">UniqueAdmin</h1>
        <nav class="space-y-4 text-sm">
          <a href="#" class="flex items-center space-x-2 hover:text-indigo-300"><i class="fas fa-home"></i><span>Dashboard</span></a>
          <a href="#" class="flex items-center space-x-2 hover:text-indigo-300"><i class="fas fa-users"></i><span>Users</span></a>
          <a href="#" class="flex items-center space-x-2 hover:text-indigo-300"><i class="fas fa-blog"></i><span>Posts</span></a>
          <a href="#" class="flex items-center space-x-2 hover:text-indigo-300"><i class="fas fa-comments"></i><span>Comments</span></a>
          <a href="#" class="flex items-center space-x-2 hover:text-indigo-300"><i class="fas fa-cogs"></i><span>Settings</span></a>
          <a href="/" class="flex items-center space-x-2 hover:text-indigo-300"><i class="fas fa-sign-out-alt"></i><span>Back to Site</span></a>
        </nav>
      </aside>

      <!-- Main -->
      <div class="flex-1 p-6 flex flex-col">
        <!-- Header -->
        <header class="flex justify-between items-center mb-8">
          <h2 class="text-3xl font-bold text-indigo-300">Admin Dashboard</h2>
          <button class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-full">
            <i class="fas fa-user-cog mr-2"></i>Admin
          </button>
        </header>

        <!-- Cards -->
        <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
          <a href="/alluser" class="block">
            <div class="bg-gray-800 p-6 rounded-2xl shadow-xl hover:shadow-indigo-500/30 transition duration-300 hover:scale-[1.02]">
              <div class="flex justify-between items-center mb-4">
                <h3 class="text-xl font-semibold text-indigo-400">Users</h3>
                <i class="fas fa-users text-white text-2xl"></i>
              </div>
              <p class="text-3xl font-bold"><%= userz.length %></p>
            </div>
          </a>

          <div class="bg-gray-800 p-6 rounded-2xl shadow-xl hover:shadow-indigo-500/30 transition duration-300">
            <a href="/allpost" class="w-full flex justify-between items-center">
              <div>
                <h3 class="text-xl font-semibold text-indigo-400 mb-2">Posts</h3>
                <p class="text-3xl font-bold"><%= postz.length %></p>
              </div>
              <i class="fas fa-blog text-white text-2xl"></i>
            </a>
          </div>

          <a href="/allcoments" class="block">
            <div class="bg-gray-800 p-6 rounded-2xl shadow-xl hover:shadow-indigo-500/30 transition duration-300">
              <div class="flex justify-between items-center mb-4">
                <h3 class="text-xl font-semibold text-indigo-400">Comments</h3>
                <i class="fas fa-comments text-white text-2xl"></i>
              </div>
              <p class="text-3xl font-bold"><%= comz.length %></p>
            </div>
          </a>

          <div class="bg-gray-800 p-6 rounded-2xl shadow-xl hover:shadow-indigo-500/30 transition duration-300">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-xl font-semibold text-indigo-400">Reports</h3>
              <i class="fas fa-flag text-white text-2xl"></i>
            </div>
            <p class="text-3xl font-bold">23</p>
          </div>
        </section>

        <!-- Activity + Quick Actions -->
        <div class="lg:flex lg:space-x-6 space-y-6 lg:space-y-0">
          <!-- Recent Activity: Users / Comments / Posts -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:w-2/3 w-full">
            <!-- New Users -->
            <section class="bg-gray-900 rounded-2xl p-4 shadow-lg h-64 overflow-y-auto custom-scrollbar">
              <h4 class="text-xl font-semibold text-indigo-300 mb-4">Recent Users</h4>
              <ul class="space-y-3 text-sm">
               <% userz.forEach(element => { %>
                <li class="flex justify-between border-b border-gray-700 pb-2 text-xs whitespace-nowrap">
                  <span class="truncate"><i class="fas fa-user-plus text-indigo-400 mr-2"></i><%=element.username  %> joined</span>
                  <span class="text-gray-400">2 mins ago</span>
                </li>
               <% }) %>
              </ul>
            </section>

            <!-- Recent Comments -->
            <section class="bg-gray-900 rounded-2xl p-4 shadow-lg h-64 overflow-y-auto custom-scrollbar">
              <h4 class="text-xl font-semibold text-indigo-300 mb-4">Recent Comments</h4>
              <ul class="space-y-3 text-sm">
               <% comz.forEach(element => { %>
                <li class="flex justify-between border-b border-gray-700 pb-2 text-xs whitespace-nowrap">
                  <span class="truncate"><i class="fas fa-comment text-indigo-400 mr-2"></i> <%=element.coments  %></span>
                  <span class="text-gray-400">30 mins ago</span>
                </li>
               <% }) %> 
              </ul>
            </section>

            <!-- Recent Posts -->
            <section class="bg-gray-900 rounded-2xl p-4 shadow-lg h-64 overflow-y-auto custom-scrollbar">
              <h4 class="text-xl font-semibold text-indigo-300 mb-4">Recent Posts</h4>
              <ul class="space-y-3 text-sm">
                 <% postz.forEach(element => { %>
                  <li class="flex justify-between border-b border-gray-700 pb-2 text-xs whitespace-nowrap">
                    <span class="truncate"><i class="fas fa-edit text-indigo-400 mr-2"></i> <%= element.title %>  updated</span>
                    <span class="text-gray-400">3 hours ago</span>
                  </li>
                 <% }) %>
              </ul>
            </section>
          </div>

          <!-- Quick Actions -->
          <section class="bg-gray-800 rounded-2xl p-6 shadow-lg lg:w-1/3 w-full">
            <h4 class="text-2xl font-semibold text-indigo-300 mb-4">Quick Actions</h4>
            <div class="space-y-4">
             
              <a href="/Announcement">
                <button class="w-full bg-indigo-500 hover:bg-indigo-600 px-4 py-2 rounded-full text-white flex items-center justify-center space-x-2">
                  <i class="fas fa-plus"></i><span>Write Announcement</span>
                </button>
              </a>
              <button class="w-full bg-indigo-500 hover:bg-indigo-600 px-4 py-2 rounded-full text-white flex items-center justify-center space-x-2">
                <i class="fas fa-user-plus"></i><span>Send Messages to user</span>
              </button>
              <button class="w-full bg-indigo-500 hover:bg-indigo-600 px-4 py-2 rounded-full text-white flex items-center justify-center space-x-2">
                <i class="fa-solid fa-envelope" style="color: #ffffff;"></i><span> Send mails to All Users</span>
              </button>
            </div>
          </section>
        </div>

       <!-- Newsletter Summary Section -->
<section class="bg-gray-900 rounded-2xl p-6 shadow-lg mt-10">
  <h4 class="text-2xl font-semibold text-indigo-300 mb-4">Newsletter Summary</h4>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Subscribers -->
    <a href="/alladminmessage" class="no-underline text-inherit">
      <div class="bg-gray-800 p-4 rounded-xl shadow hover:shadow-indigo-500/20 transition duration-200 h-42">
        <div class="flex items-center justify-between h-full">
          <div>
            <p class="text-sm text-gray-400">All message from User!</p>
            <h3 class="text-2xl font-bold text-indigo-400"><%= allmesseage.length %></h3>
          </div>
          <i class="fas fa-envelope-open-text text-indigo-300 text-2xl"></i>
        </div>
      </div>
    </a>
    
    <!-- Open Rate -->
    <div class="bg-gray-800 p-4 rounded-xl shadow hover:shadow-indigo-500/20 transition duration-200 h-42">
      <div class="flex items-center justify-between h-full">
        <div>
          <p class="text-sm text-gray-400">Open Rate</p>
          <h3 class="text-2xl font-bold text-green-400">42%</h3>
        </div>
        <i class="fas fa-chart-line text-green-300 text-2xl"></i>
      </div>
    </div>

    <!-- Top Posts This Week -->
    <div class="bg-gray-800 p-4 rounded-xl shadow hover:shadow-indigo-500/20 transition duration-200 h-42">
      <div class="flex items-center justify-between mb-2">
        <div>
          <h3 class="text-base font-semibold text-indigo-200">Announcement</h3>
       
        </div>
        <i class="fas fa-bullhorn text-yellow-300 text-2xl"></i>
      </div>
      <!-- Scrollable post list -->
      <div class="overflow-y-auto max-h-20 space-y-1 pr-1 custom-scrollbar">
     <% Announcement.forEach(element => { %>
      <div class="flex items-center justify-between text-sm text-indigo-300">
        <span><%= element.title %></span>
      <a href="/deleteAnnouncement/<%= element._id %>">
          <button type="submit" class="text-red-500 hover:text-red-600 font-semibold">
            <i class="fas fa-trash-alt mr-1"></i> Delete
          </button>
        </a>
      </div> 
     <% }) %>
      </div>
    </div>
  </div>
</section>


      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-400 text-sm px-6 py-4 text-center rounded-t-2xl shadow-inner mt-10">
      <div class="flex flex-col sm:flex-row justify-between items-center max-w-7xl mx-auto space-y-2 sm:space-y-0">
        <span>&copy; 2025 UniqueBlog Admin Panel. All rights reserved.</span>
        <div class="space-x-4">
          <a href="#" class="hover:text-indigo-400 transition duration-200">Privacy Policy</a>
          <a href="#" class="hover:text-indigo-400 transition duration-200">Terms</a>
          <a href="mailto:support@uniqueblog.com" class="hover:text-indigo-400 transition duration-200">Support</a>
        </div>
      </div>
    </footer>
  </div>
</body>

</html>
